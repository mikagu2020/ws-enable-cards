<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btnActEu"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Activar EUROPEA"/>

    <Button
        android:id="@+id/btnActInt"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Activar INTERNACIONAL"/>

    <Button
        android:id="@+id/btnInfoCards"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="InformaciÃ³n tarjetas"/>

    <TextView
        android:id="@+id/respose_text_field"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/send_button"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="Aqui se mostrara la respuesta"/>

</LinearLayout>